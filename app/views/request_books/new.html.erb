<h1>Request Book</h1>

<%= form_with(model: @request_book) do |form| %>
  <div>
    <%= form.label :user %><br/>
    <%= form.select :user_id, @users.collect { |u| [ u.email, u.id ] }, include_blank: true %>
  </div>

  <div>
    <%= form.label :book %><br/>
    <%= form.select :book_id, @books.collect { |b| [ b.name, b.id ] }, include_blank: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
